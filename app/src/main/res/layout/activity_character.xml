<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/character_logo"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginVertical="24dp"
                    android:src="@mipmap/tartalia_full" />

                <RelativeLayout
                    android:id="@+id/entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_logo"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/cr15dp"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/title"
                        style="@style/TextView.MatchParent22sp.EditText"
                        android:enabled="false"
                        android:inputType="none"
                        android:padding="0dp" />

                    <EditText
                        android:id="@+id/rarityText"
                        style="@style/TextView.WrapContent16sp.EditText"
                        android:layout_below="@id/title"
                        android:text="@string/rarity" />

                    <EditText
                        android:id="@+id/rarity"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@id/title"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/rarityText" />

                    <EditText
                        android:id="@+id/weaponText"
                        style="@style/TextView.WrapContent16sp.EditText"
                        android:layout_below="@id/rarityText"
                        android:text="@string/weapon" />

                    <EditText
                        android:id="@+id/weapon"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@id/rarityText"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/weaponText" />

                    <EditText
                        android:id="@+id/eyeText"
                        style="@style/TextView.WrapContent16sp.EditText"
                        android:layout_below="@id/weaponText"
                        android:text="@string/eye" />

                    <EditText
                        android:id="@+id/eye"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@id/weaponText"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/eyeText" />

                    <EditText
                        android:id="@+id/fullnameText"
                        style="@style/TextView.WrapContent16sp.EditText"
                        android:layout_below="@id/eyeText"
                        android:text="@string/full_name" />

                    <EditText
                        android:id="@+id/fullname"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@id/eyeText"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/fullnameText" />

                    <EditText
                        android:id="@+id/sexText"
                        style="@style/TextView.WrapContent16sp.EditText"
                        android:layout_below="@id/fullnameText"
                        android:text="@string/gender" />

                    <EditText
                        android:id="@+id/sex"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@id/fullnameText"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/sexText" />

                    <EditText
                        android:id="@+id/birthdayText"
                        style="@style/TextView.WrapContent16sp.EditText"
                        android:layout_below="@id/sexText"
                        android:text="@string/birthday" />

                    <EditText
                        android:id="@+id/birthday"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@id/sexText"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/birthdayText" />

                    <EditText
                        android:id="@+id/regionText"
                        style="@style/TextView.WrapContent16sp.EditText"
                        android:layout_below="@id/birthdayText"
                        android:text="@string/region" />

                    <EditText
                        android:id="@+id/region"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@id/birthdayText"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/regionText" />

                    <EditText
                        android:id="@+id/belongingText"
                        style="@style/TextView.WrapContent16sp.EditText"
                        android:layout_below="@id/regionText"
                        android:text="@string/belonging" />

                    <EditText
                        android:id="@+id/belonging"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@id/regionText"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/belongingText" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/entry"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/cr15dp"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/destText"
                        style="@style/TextView.MatchParent22sp.EditText"
                        android:text="@string/description" />

                    <EditText
                        android:id="@+id/dest"
                        style="@style/TextView.MatchParent16sp.EditText"
                        android:layout_below="@+id/destText"
                        android:layout_marginStart="0dp"
                        android:maxLines="999" />

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>