<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/cr15dp"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/model_gacha_icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@mipmap/eola" />

    <TextView
        android:id="@+id/model_gacha_title"
        style="@style/TextView.WrapContent22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_gacha_star"
            style="@style/TextView.WrapContent16sp" />

        <TextView
            style="@style/TextView.WrapContent16sp"
            android:layout_marginLeft="5dp" />

        <ImageView style="@style/Star" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_gacha_star1"
            style="@style/TextView.WrapContent16sp" />

        <TextView
            style="@style/TextView.WrapContent16sp"
            android:layout_marginLeft="5dp" />

        <ImageView style="@style/Star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_gacha_star2"
            style="@style/TextView.WrapContent16sp" />

        <TextView
            style="@style/TextView.WrapContent16sp"
            android:layout_marginLeft="5dp" />

        <ImageView style="@style/Star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_gacha_star3"
            style="@style/TextView.WrapContent16sp" />

        <TextView
            style="@style/TextView.WrapContent16sp"
            android:layout_marginLeft="5dp" />

        <ImageView style="@style/Star" />

    </LinearLayout>

</LinearLayout>