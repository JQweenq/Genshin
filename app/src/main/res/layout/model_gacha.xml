<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Gacha">

    <ImageView
        android:id="@+id/model_gacha_icon"
        style="@style/GachaImage"
        android:src="@mipmap/eola" />

    <TextView
        android:id="@+id/model_gacha_title"
        style="@style/GachaText"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_gacha_star"
            style="@style/GachaTextSmall"
            android:text="" />

        <TextView
            style="@style/GachaTextStar"
            android:text="@string/five" />

        <ImageView style="@style/Star" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_gacha_star1"
            style="@style/GachaTextSmall"
            android:text="" />

        <TextView
            style="@style/GachaTextStar"
            android:text="@string/four" />

        <ImageView style="@style/Star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_gacha_star2"
            style="@style/GachaTextSmall"
            android:text="" />

        <TextView
            style="@style/GachaTextStar"
            android:text="@string/four" />

        <ImageView style="@style/Star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_gacha_star3"
            style="@style/GachaTextSmall"
            android:text="" />

        <TextView
            style="@style/GachaTextStar"
            android:text="@string/four" />

        <ImageView style="@style/Star" />

    </LinearLayout>


</LinearLayout>