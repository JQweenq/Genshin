<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Characters">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="CharactersIco">
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">116dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="CharactersContainerContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="CharactersText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/inter_val</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CharactersStarRate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/inter_val</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>