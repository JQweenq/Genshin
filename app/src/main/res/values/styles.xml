<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_val</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="TextView.MatchParent22sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView.WrapContent22sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView.MatchParent16sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.WrapContent16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavigationBarButton">
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScrollerContainer" parent="ScrollView">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Star">
        <item name="android:layout_height">23sp</item>
        <item name="android:layout_width">23sp</item>
        <item name="android:fillColor">?android:textColor</item>
        <item name="android:src">@drawable/star</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#AFAFAF</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.MatchParent16sp.EditText">
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">#0000</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">none</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextView.MatchParent22sp.EditText">
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">#0000</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">none</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextView.WrapContent16sp.EditText">
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">#0000</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">none</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/cr10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>