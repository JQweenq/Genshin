<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <!--        <item name="android:fontFamily">@font/inter_val</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="NavigationBarButton">
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScrollerContainer" parent="ScrollView">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:inputType">none</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextView.EditText">
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">#0000</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">none</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button">
        <!--        <item name="android:background">@drawable/cr10dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <!--        <item name="android:fontFamily">@font/roboto</item>-->
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>