<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/window_light_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/window_light_bg</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Light.Launch">
        <item name="android:windowBackground">@drawable/light_splash_screen</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/window_dark_bg</item>
        <item name="android:navigationBarColor">@color/window_dark_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">#DDD</item>
    </style>

    <style name="AppTheme.Dark.Launch">
        <item name="android:windowBackground">@drawable/dark_splash_screen</item>
    </style>
</resources>