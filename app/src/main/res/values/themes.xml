<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:textColorPrimary">?android:colorBackground</item>
        <item name="colorPrimary">#4F46E5</item>
        <item name="colorOnSecondary">#FFF</item>
    </style>

    <style name="AppTheme.Light">

        <item name="android:colorBackground">#E5E7EB</item>
        <item name="colorOnBackground">#F9FAFB</item>
        <item name="colorOnSecondary">#FFF</item>
        <!--    фон кнопок    -->
        <!--		<item name="colorPrimary">#F9FAFB</item>-->
        <!--    текст на конпах    -->
        <item name="colorOnPrimary">#FFF</item>
        <!--    текст    -->
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">#000</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="android:colorBackground">#1F2937</item>
        <item name="colorOnBackground">#374151</item>
        <item name="colorOnPrimary">#FFF</item>
        <!--		<item name="colorPrimary">#374151</item>-->
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:colorBackground">#1F2937</item>
    </style>
</resources>