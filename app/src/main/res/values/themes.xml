<resources>
	<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowBackground">@drawable/bg_activity</item>

		<item name="android:textViewStyle">@style/TextView</item>

		<item name="colorSecondary">#4F46E5</item>
		<item name="colorOnSecondary">#FFF</item>
	</style>

	<style name="AppTheme.Light">
		<item name="android:colorBackground">#E5E7EB</item>
		<item name="colorOnBackground">#F9FAFB</item>
		<item name="colorOnSecondary">#FFF</item>
		<!--    фон кнопок    -->
		<item name="colorPrimary">#F9FAFB</item>
		<!--    текст на конпах    -->
		<item name="colorOnPrimary">#FFF</item>
		<!--    системный навбар    -->
		<item name="android:navigationBarColor">?android:colorBackground</item>
		<!--    текст    -->
		<item name="android:textColor">#000</item>
	</style>

	<style name="AppTheme.Dark">
		<item name="android:colorBackground">#1F2937</item>
		<item name="colorOnBackground">#374151</item>

		<item name="android:navigationBarColor">?android:colorBackground</item>

		<item name="colorOnPrimary">#FFF</item>
		<item name="colorPrimary">#374151</item>

		<item name="android:textColor">#FFF</item>

	</style>

	<style name="AppTheme.Launch">
		<item name="android:windowBackground">@drawable/splash_screen</item>
		<item name="android:colorBackground">#1F2937</item>
	</style>
</resources>